.container {
  color: #333;
}
.container .menu-wrapper {
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  height: 120rpx;
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
  background: #f2f2f2;
}
.container .menu-wrapper .mode {
  position: relative;
  font-size: 36rpx;
}
.container .menu-wrapper .mode::before {
  content: '';
  position: absolute;
  background: #f90;
  width: 6rpx;
  height: 100%;
  top: 50%;
  transform: translateY(-50%);
  left: -18rpx;
}
.container .menu-wrapper .menu {
  display: flex;
  align-items: center;
  text-align: right;
}
.container .menu-wrapper .menu .icon {
  width: 36rpx;
  height: 36rpx;
}
.container .menu-wrapper .menu .txt {
  font-size: 28rpx;
  padding-left: 6rpx;
}