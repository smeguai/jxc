.container {
  min-height: 100vh;
  background: #f2f2f2;
}
.container .search-wrapper{
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
  background: #37d192;
  padding: 20rpx;
}
.container .search-wrapper .search {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #fff;
}
.container .search-wrapper .icon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  z-index: 9;
}
.container .order {
  background: #fff;
  padding: 14rpx 0;
}
.container .order .row {
  display: flex;
  padding: 6rpx 20rpx;
  align-items: center;
}
.container .order .row .time {
  font-size: 24rpx;
  color: #999;
}
.container .order .row .no {
  font-size: 28rpx;
  font-weight: 700;
  flex:1;
}
.container .order .row .sku {
  font-size: 24rpx;
}
.container .order .row .sku .num {
  color: #FF9900;
}
.container .order .row .line {
  flex:1;
  font-size: 28rpx;
}
.container .cap {
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 20rpx;
  position: relative;
  font-size: 28rpx;
}
.container .cap::before {
  position: absolute;
  content: '';
  left: 0rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 40rpx;
  background: #FF9900;
}
.container .list .item {
  margin-bottom: 14rpx;
  background: #fff;
  padding: 10rpx 0;
}
.container .list .item .row {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.container .list .item .row .no {
  flex: 1;
}
.container .list .item .row .outstock {
  color: #FF9900;
}
.container .list .item .row .outstock .icon {
  width: 24rpx;
  height: 24rpx;
}
.container .list .item .info {
  padding: 0 20rpx;
}
.container .list .item .info .name {
  font-size: 28rpx;
  padding: 20rpx 0;
}
.container .list .item .info .desc {
  display: flex;
  flex-wrap: wrap;
}
.container .list .item .info .desc .txt {
  font-size: 28rpx;
  color: #999999;
  padding: 10rpx 0;
  width: 50%;
}
.container .list .item .info .desc .txt .num {
  color: #FF0000;
}
.container .btns {
  padding: 80rpx 0;
  display: flex;
  justify-content: center;
}
.container .btns .cancel {
  border: 1rpx solid #FF9900;
  color: #FF9900;
  font-size: 28rpx;
  border-radius: 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  width: 200rpx;
  text-align: center;
  box-sizing: border-box;
}
.container .btns .confirm {
  background: #37d192;
  color: #fff;
  font-size: 28rpx;
  border-radius: 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  width: 200rpx;
  text-align: center;
  margin-left: 20rpx;
}




