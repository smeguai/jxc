.container {
  min-height: 100vh;
  background: #f2f2f2;
}
.container .list .item {
  background: #fff;
  margin-bottom: 16rpx;
  padding: 10rpx 0;
}
.container .list .item .row {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  position: relative;
}
.container .list .item .row .no {
  font-size: 28rpx;
  font-weight: 700;
  flex:1;
}
.container .list .item .row .mode1 {
  color: #FF9900;
  font-size: 28rpx;
}
.container .list .item .row .mode2 {
  color: #FF0000;
  font-size: 28rpx;
}
.container .list .item .row .mode3 {
  width: 100rpx;
  height: 88rpx;
  position: absolute;
  right: 20rpx;
  top: 10rpx;
}
.container .list .item .row .line {
  flex: 1;
  font-size: 28rpx;
}
.container .list .item .row .date {
  color: #999999;
  font-size: 24rpx;
}
.container .list .item .sec {
  border-top: 1rpx solid #ddd;
  display: flex;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.container .list .item .sec .sku {
  font-size: 24rpx;
  flex: 1;
}
.container .list .item .sec .sku .num {
  font-size: 36rpx;
  color: #FF9900;
}
.container .list .item .sec .details {
  display: flex;
  align-items: center;
}
.container .list .item .sec .details .txt {
  font-size: 24rpx;
  color: #999;
}
.container .list .item .sec .details .icon {
  width: 24rpx;
  height: 24rpx;
}
.container .list .item .sec .btn {
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #FF9900;
  color: #fff;
  text-align: center;
  border-radius: 40rpx;
  margin: 0;
}
.container .filter-wrapper {
  z-index: 11;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}
.container .filter-wrapper .mask {
  position: absolute;
  z-index: 9;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,.2);
  /* background: yellow */
}
.container .filter-wrapper .filter {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 10;
  width: 660rpx;
  background: #fff;
  padding-top: 20rpx;
}
.container .filter-wrapper .filter .tit {
  position: relative;
  font-size: 36rpx;
  padding: 20rpx;
}
.container .filter-wrapper .filter .tit::before {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  content: '';
  width: 6rpx;
  height: 44rpx;
  background: #f90;
}
.container .filter-wrapper .status {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.status .item {
  width: 286rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  margin: 10rpx 0;
  border: 1rpx solid #999;
  border-radius: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.status .item.active {
  border: 0;
  color:#fff;
  background: #f90;
}
.pricker {
  height: 88rpx;
  line-height: 88rpx;
  background: #f2f2f2;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
  margin: 0 20rpx;
}
.btn {
  margin-top: 80rpx;
  color: #fff;
  font-size: 28rpx;
  background: #37d192;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}