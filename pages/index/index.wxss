.container {
  background: #f2f2f2;
  min-height: 100vh;
}
.container .picker {
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
}
.container .picker .icon1 {
  width: 32rpx;
  height: 32rpx;
}
.container .picker .icon2 {
  width: 24rpx;
  height: 14rpx;
}
.container .picker .txt {
  flex: 1;
  font-size: 28rpx;
  color: #999;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.container .info .txt {
  font-size: 36rpx;
  color: #3E3A39;
}
.container .userinfo {
  background: #37d192;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 48rpx 0;
}
.container .userinfo .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: red;
}
.container .userinfo .name {
  font-size: 32rpx;
  color: #fff;
  padding-top: 16rpx;
}
.container .info {
  padding: 0 30rpx;
}
.container .info .col-2 {
  display: flex;
  justify-content: space-between;
  margin: 28rpx 0;
  border-radius: 4rpx;
}
.container .info .col-2 .section {
  width: 330rpx;
  height: 330rpx;
  background: #fff;
  box-shadow: 6rpx 6rpx 6rpx 0 rgba(0,0,0,.1);
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}
.container .info .col-2 .section .icon {
  width: 200rpx;
  height: 174rpx;
}
.container .info .row {
  height: 220rpx;
  background: #fff;
  box-shadow: 6rpx 6rpx 6rpx 0 rgba(0,0,0,.1);
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-radius: 6rpx;
}
.container .info .row .icon {
  width: 200rpx;
  height: 174rpx;
}