.container {
  min-height: 100vh;
  background: #f2f2f2;
}
.container .search-wrapper{
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
  background: #37d192;
  padding: 20rpx;
  z-index: 99;
}
.container .search-wrapper .search {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #fff;
}
.container .search-wrapper .icon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  z-index: 9;
}
.container .order {
  background: #fff;
  padding: 14rpx 0;
}
.container .order .row {
  display: flex;
  padding: 6rpx 20rpx;
  align-items: center;
}
.container .order .row .time {
  font-size: 24rpx;
  color: #999;
}
.container .order .row .no {
  font-size: 28rpx;
  font-weight: 700;
  flex:1;
}
.container .order .row .no .mode1 {
  font-size: 20rpx;
  color: #1FBB7C;
  font-weight: normal;
  border-radius: 8rpx;
  border: 1rpx solid #1FBB7C;
  padding: 4rpx 8rpx;
  box-sizing: border-box;
  margin-right: 8rpx;
}
.container .order .row .no .mode2 {
  font-size: 20rpx;
  color: #FF9900;
  border: 1rpx solid #FF9900;
  font-weight: normal;
  border-radius: 8rpx;
  padding: 4rpx 8rpx;
  box-sizing: border-box;
  margin-right: 8rpx;
}
.container .order .row .sku {
  font-size: 24rpx;
}
.container .order .row .sku .num {
  color: #FF9900;
}
.container .order .row .line {
  flex:1;
  font-size: 28rpx;
}
.container .tab-wrapper {
  background: #f2f2f2;
  font-size: 32rpx;
  display: flex;
  padding: 0 20rpx;
  justify-content: center;
  box-sizing: border;
}
.container .tab-wrapper .item {
  flex: 1;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
}
.container .tab-wrapper .item.active {
  color: #FF9900;
}
.container .list .item {
  margin-bottom: 14rpx;
  background: #fff;
  padding: 10rpx 0;
}
.container .list .item .row {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding: 0 20rpx 10rpx 20rpx;
  border-bottom: 1rpx solid #ddd;
  position: relative;
}
.container .list .item .row .no {
  flex: 1;
}
.container .list .item .row .sh {
  position: absolute;
  width: 100rpx;
  height: 88rpx;
  right: 20rpx;
  top: 0;
}
.container .list .item .row .no .diff {
  color: red;
  padding-right: 8rpx;
}
.container .list .item .row .color_0 {
  color: #FF9900;
}
.container .list .item .row .color_1 {
  color: red;
}
.container .list .item .row .outstock .icon {
  width: 24rpx;
  height: 24rpx;
}
.container .list .item .info {
  padding: 0 20rpx;
}
.container .list .item .info .name {
  font-size: 28rpx;
  padding: 20rpx 0;
}
.container .list .item .info .desc {
  font-size: 28rpx;
  display: flex;
  flex-wrap: wrap;
  color: #999999;
  justify-content: space-between;
}
.container .list .item .info .desc .count {
  color:#333;
}
.container .list .item .info .desc .txt-2 {
  padding: 10rpx 0;
  width: 42%;
}
.container .list .item .info .desc .txt-3 {
  padding: 10rpx 0;
  width: 30%;
}
.container .list .item .info .desc .num {
  color: #FF0000;
}
.container .btns {
  padding: 60rpx 0 10rpx 0;
  display: flex;
  justify-content: center;
}
.container .btns .cancel {
  border: 1rpx solid #FF9900;
  color: #FF9900;
  font-size: 28rpx;
  border-radius: 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  width: 200rpx;
  text-align: center;
  box-sizing: border-box;
}
.container .btns .confirm {
  background: #37d192;
  color: #fff;
  font-size: 28rpx;
  border-radius: 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  width: 200rpx;
  text-align: center;
  margin-left: 20rpx;
}
.container .popsection {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  display: flex;
  align-items: center;
  z-index: 100;
}
.container .popsection .mask {
  position: absolute;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,.2);
}
.container .popsection .modify {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: absolute;
  left: 20rpx;
  right: 20rpx;
}
.container .popsection .modify .details {
  padding: 20rpx 0;
  text-align: center;
}
.container .popsection .modify .details .txt {
  font-size: 28rpx;
}
.container .popsection .modify .details .txt .diff {
  color: #FF9900;
}
.container .popsection .modify .norm {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #ddd;
  font-size: 28rpx;
  color: #999;
}
.container .popsection .modify .norm .txt {
  width: 50%;
}
.container .popsection .modify .norm .difftxt {
  width: 30%;
}
.container .popsection .modify .norm .txt .count,.container .popsection .modify .norm .difftxt .count {
  color: #FF0000;
  font-weight: 700;
}
.container .popsection .modify .norm .difftxt .num {
  color: #333;
}
.container .popsection .modify .from {
  font-size: 28rpx;
}
.container .popsection .modify .from .row {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
}
.container .popsection .modify .from .row .txt0 {
  width: 140rpx;
}
.container .popsection .modify .from .row .txt1 {
  width: 30rpx;
}
.container .popsection .modify .from .row .date-wrapper {
  flex: 1;
  display: flex;
  padding: 0 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.container .popsection .modify .from .row .date {
  border: 1rpx solid #d7d7d7;
  box-sizing: border-box;
  height: 88rpx;
  line-height: 88rpx;
  width: 300rpx;
  text-align: center;
  border-radius: 16rpx;
}
.container .popsection .modify .from .row .count {
  background: #f2f2f2;
  border: 1rpx solid #d7d7d7;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  box-sizing: border-box;
  border-radius: 16rpx;
  flex: 1;
  margin: 0 20rpx;
}
.container .popsection .modify .from .row .ipt {
  border: 1rpx solid #d7d7d7;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  box-sizing: border-box;
  border-radius: 16rpx;
  flex: 1;
  margin: 0 20rpx;
}
.remarks {
  flex:1;
  height: 152rpx;
  border: 1rpx solid #d7d7d7;
  line-height: 30rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
  margin: 0 20rpx;
  padding: 20rpx;
}