.container {
  min-height: 100vh;
  background: #f2f2f2;
}
.container .addorder {
  text-align: center;
  background: #37d192;
  padding: 24rpx 0;
  display: flex;
  justify-content: center;
}
.container .addorder .btn {
  display: inline-block;
}
.container .addorder .btn .icon {
  width: 66rpx;
  height: 76rpx;
}
.container .addorder .btn .txt {
  color: #fff;
  font-size: 32rpx;
  padding-top: 10rpx;
}
.container .menu-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  height: 120rpx;
}
.container .menu-wrapper .mode {
  position: relative;
  font-size: 36rpx;
}
.container .menu-wrapper .mode::before {
  content: '';
  position: absolute;
  background: #f90;
  width: 6rpx;
  height: 100%;
  top: 50%;
  transform: translateY(-50%);
  left: -18rpx;
}
.container .menu-wrapper .menu {
  display: flex;
  align-items: center;
  text-align: right;
}
.container .menu-wrapper .menu .icon {
  width: 36rpx;
  height: 36rpx;
}
.container .menu-wrapper .menu .txt {
  font-size: 28rpx;
  padding-left: 6rpx;
}
.container .list .item {
  background: #fff;
  color: #333333;
  padding: 10rpx 26rpx;
  margin-bottom: 16rpx;
}
.container .list .item .row {
  display: flex;
  align-items: center;
  padding-top: 6rpx;
  position: relative;
}
.container .list .item .row .mode1 {
  padding: 6rpx 8rpx;
  border: 1rpx solid #FF9900;
  color: #FF9900;
  font-size: 24rpx;
  border-radius: 8rpx;
}
.container .list .item .row .mode2 {
  padding: 6rpx 8rpx;
  border: 1rpx solid #37d192;
  color: #37d192;
  font-size: 24rpx;
  border-radius: 8rpx;
}
.container .list .item .row .sh {
  position: absolute;
  right: 0;
  top: 0;
  width: 100rpx;
  height: 88rpx;
}
.container .list .item .row .no {
  flex: 1;
  font-size: 28rpx;
  color: 700;
  padding: 0 16rpx;
  box-sizing: border-box;
}
.container .list .item .row .status {
  font-size: 28rpx;
}
.container .list .item .row .status.color_0 {
  color: #FF9900;
}
.container .list .item .row .status.color_1 {
  color: red;
}
.container .list .item .seller {
  display: flex;
  padding: 12rpx 0;
}
.container .list .item .seller .name {
  flex: 1;
  font-size: 28rpx;
}
.container .list .item .seller .date {
  color:#999999;
  font-size: 24rpx;
}
.container .list .item .sec {
  border-top: 1rpx solid #ddd;
  font-size: 28rpx;
  padding: 12rpx 0;
  display: flex;
  align-items: center;
}
.container .list .item .sec .sku {
  flex: 1;
}
.container .list .item .sec .sku .num {
  color:#FF9900;
}
.container .list .item .sec .details {
  display: flex;
  align-items: center;
}
.container .list .item .sec .details .txt {
  font-size: 24rpx;
  color: #999;
}
.container .list .item .sec .details .icon {
  width: 24rpx;
  height: 24rpx;
}
.container .list .item .sec .btn {
  color:#fff;
  background: #FF9900;
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 40rpx;
  text-align: center;
}
.container .filter-wrapper {
  z-index: 11;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}
.container .filter-wrapper .mask {
  position: absolute;
  z-index: 9;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,.2);
  /* background: yellow */
}
.container .filter-wrapper .filter {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 10;
  width: 660rpx;
  background: #fff;
  padding-top: 20rpx;
}
.container .filter-wrapper .filter .tit {
  position: relative;
  font-size: 36rpx;
  padding: 20rpx;
}
.container .filter-wrapper .filter .tit::before {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  content: '';
  width: 6rpx;
  height: 44rpx;
  background: #f90;
}
.container .filter-wrapper .status {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.container .filter-wrapper .status .item {
  width: 286rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  margin: 10rpx 0;
  border: 1rpx solid #999;
  border-radius: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.container .filter-wrapper .status .item.active {
  border: 0;
  color:#fff;
  background: #f90;
}
.container .filter-wrapper .pricker {
  height: 88rpx;
  line-height: 88rpx;
  background: #f2f2f2;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
  margin: 0 20rpx;
}
.container .filter-wrapper  .btn {
  margin-top: 80rpx;
  color: #fff;
  font-size: 28rpx;
  background: #37d192;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}